---
import Layout from "../layouts/Layout.astro";
import Badge from "../components/Badge.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import SocialElement from "../components/SocialElement.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import YoutubeIcon from "../components/icons/Youtube.astro";
import GmailIcon from "../components/icons/Gmail.astro";
import Experience from "../components/Experience.astro";
import MaletinIcon from "../components/icons/Maletin.astro";
import DiscordIcon from "../components/icons/Discord.astro";
import InstagramIcon from "../components/icons/Instagram.astro";
import DowloadIcon from "../components/icons/Download.astro";
import BadgeCurr from "../components/BadgeCurr.astro";
import ProyectsIcon from "../components/icons/Proyects.astro";
---

<Layout
	title="Porfolio SoyySebas - Desarrollador, Programador Web, Analista de Datos, Contador y Auditor"
	description="Contacta o Contrata a Sebastian Gutierrez (SoyySebas) para obtener un servicio único en cualquier proyecto. Desarrollador, Analista de Datos, Contador, Auditor y Creador de Contenido."
>
	<main class="px-4">
		<SectionContainer class="py-24 lg:py-44 pb-16 lg:pb-32">
			<img
				class="rounded-full size-28 mb-4"
				src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR8aC6AedRiF0LQYTQ5pVkZ_0kssB_cpf4cUVxylCodiQ&s"
				alt="soy_sebas photo"
			/>
			<h1
				class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10"
			>
				Hey, Soy Sebastian
				<a
					href="https://www.linkedin.com/in/sebastian-gutierrez-guayacundo-43b165288"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-lg lg:text-2xl text-pretty max-w-[700px]">
				Mi enfoque integral abarca una diversa gama de habilidades
				<span class="text-yellow-200/90 opacity-90">
					Desarrollador, Analista de Datos, Contador, Auditor y
					Creador de Contenido
				</span>.
				<span class="text-blue-200/100 opacity-90">
					De Bogotá, Colombia
				</span>.
				<span class="opacity-70">
					Especializado en diseñar y ejecutar soluciones únicas para
					impulsar el éxito en cada proyecto.
				</span>
			</h2>

			<nav class="flex gap-3.5 mt-4 lg:mt-6 flex-wrap">
				<SocialElement
					href="https://www.linkedin.com/in/sebastian-gutierrez-guayacundo-43b165288"
				>
					<LinkedInIcon class="size-5 md:size-6" />
					LinkedIn
				</SocialElement>
				<SocialElement href="https://github.com/Soy-Sebas">
					<GitHubIcon class="size-5 md:size-6" />
					GitHub
				</SocialElement>
				<SocialElement href="https://www.instagram.com/soyy_sebas/">
					<InstagramIcon class="size-5 md:size-6" />
					Instagram
				</SocialElement>
				<SocialElement
					href="https://discordapp.com/users/1140012750874099772"
				>
					<DiscordIcon class="size-5 md:size-6" />
					Discord
				</SocialElement>
				<SocialElement
					href="https://www.youtube.com/@Sebastian.Gutierrez"
				>
					<YoutubeIcon class="size-5 md:size-6" />
					Youtube
				</SocialElement>
				<SocialElement
					href="https://www.youtube.com/@Sebastian-Gutierrez"
				>
					<YoutubeIcon class="size-5 md:size-6" />
					DevSebas
				</SocialElement>
				<div id="copiedNotification" class="notification"></div>
				<SocialElement id="miSocialElementCorreo" role="button">
					<GmailIcon class="size-5 md:size-6" />
					sebastian.gutierrez.guayacundo@gmail.com
					<script src="../scripts/copyEm.js"></script>
				</SocialElement>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2
				class="text-2xl lg:text-3xl font-semibold mb-6 flex gap-x-2 items-center"
			>
				<MaletinIcon class="size-7 md:size-7" />
				Experiencia
				<a
					href=""
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<BadgeCurr>Descargar CV</BadgeCurr>
				</a>
			</h2>
			<Experience class="size-5 md:size-6" />
		</SectionContainer>
		<SectionContainer id="proyectos">
			<h2
				class="text-2xl lg:text-3xl font-semibold mb-6 flex gap-x-2 items-center"
			>
				<ProyectsIcon class="size-7 md:size-7" />
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
