const navItems = [
  {
    title: "Sobre mí",
    url: "/#sobre-mi",
  },
  {
    title: "Academia",
    url: "/",
    descr: "¡Próximamente!",
  },
  {
    title: "Experiencia",
    url: "/#experiencia",
    descr: "¡Próximamente!",
  },
  {
    title: "Proyectos",
    url: "/#proyectos",
