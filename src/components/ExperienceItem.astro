---
interface Props{
    date:string
    title: string
    company: string
    description: string
    link?: string
    position: string
}
const { title, company, description, link, position, date} = Astro.props
---
<span 
    class="absolute flex items-center justify-center w-3 h-3 bg-blue-100 rounded-full -start-2.5 ring-8 ring-white dark:ring-blue-900 dark:bg-blue-100 ml-1">
</svg>
</span>
<h3 
    class="flex items-center mb-1 text-base lg:text-lg font-semibold text-gray-900 dark:text-white">{company} 
    <span 
        class="bg-blue-100 text-blue-800 text-xs lg:text-sm font-medium me-2 px-2.5 py-1 rounded dark:bg-blue-900 dark:text-blue-300 ms-3">{position}
    </span>
</h3>

<p 
    class="mb-4 text-sm lg:text-base font-semibold text-blue-300 opacity-90 mt-2">{title}
</p>

<p 
    class=" py-1 text-sm lg:text-base font-bold text-gray-300 text-balance">{date}
</p>
<p 
    class="mb-4 py-2 text-sm lg:text-base font-normal text-gray-300 text-pretty">{description}
</p>
{
    link &&(
    <a  
        href={link} 
        class="neon-link bg-white/05
        border rounded-full
        text-sm lg:text-base
        items-center gap-x-2 
        py-1.5 px-2.5 pb:py-2 pb:px-4 
        transition
        hover:scale-120 hover:bg-white/10"
        target="_blank"
        >
        Saber m√°s... {""}
        
        <div class="inline-flex">
            <svg 
                class="w-4 h-3.5 me-0" 
                aria-hidden="true" 
                xmlns="http://www.w3.org/2000/svg" 
                fill="currentColor" 
                viewBox="0 0 20 20"
                >
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    class="icon icon-tabler icon-tabler-arrow-right" 
                    width="24" 
                    height="24" 
                    viewBox="0 0 24 24" 
                    stroke-width="2" 
                    stroke="currentColor" 
                    fill="none" 
                    stroke-linecap="round" 
                    stroke-linejoin="round">
                        <path 
                            stroke="none" 
                            d="M0 0h24v24H0z" 
                            fill="none"/><path 
                            d="M5 12l14 0" />
                        <path 
                            d="M13 18l6 -6" />
