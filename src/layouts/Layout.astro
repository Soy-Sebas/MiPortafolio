---
import "@fontsource-variable/onest";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <body class="relative text-black dark:text-white"></body>
    <div
      class="absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 bg-neutral-100 dark:bg-neutral-950
      bg-[radial-gradient(ellipse_80%_80%_at_50%_50%,rgba(255,216,255,0.5),rgba(255,255,255,0.9))] dark:[background:radial-gradient(90%_150%_at_50%_30%,#001_20%,#e10063_180%)]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family:
      "Onest" system-ui,
      sans-serif;
    scroll-behavior: smooth;
  }

  body {
    color: rgba(17, 17, 17, 0.9);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    overscroll-behavior: none;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
  @media (prefers-color-scheme: dark) {
    body {
      color: rgba(255, 255, 255, 0.9);
    }
  }
  .neon-link:hover {
    box-shadow:
      0 0 10px rgb(255, 255, 255, 1),
      0 0 10px rgb(255, 255, 255, 1),
      0 0 10px rgb(255, 255, 255, 1);
    filter: brightness(1.2);
    transition:
      box-shadow 0.3s ease-in-out,
      filter 0.3s ease-in-out;
  }
  .neon-link {
    font-weight: inherit;
  }
  .notification {
    position: fixed;
    bottom: 10px;
    right: 10px;
    padding: 10px;
    background-color: #4caf50;
    color: #fff;

    display: none;
  }

  .notification.show {
    display: block;
    animation: fadeOut 5s forwards;
  }

  @keyframes fadeOut {
    0% {
      opacity: 1;
    }
    100% {
      opacity: 0;
    }
  }
  /* Estilo predeterminado para el modo claro */
  path.dark-mode {
    fill: white; /* Relleno negro para el segundo path */
  }

  /* Estilo para el modo oscuro */
  @media (prefers-color-scheme: dark) {
    path.light-mode {
      fill: white; /* Relleno negro para el primer path */
    }

    path.dark-mode {
      fill: black; /* Relleno blanco para el segundo path */
    }
  }
</style>
