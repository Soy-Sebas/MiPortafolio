---
const personalImageAlt = "Sebastian Gutierrez Guayacundo";
import Badge from "@/components/Badge.astro";
import DiscordIcon from "@/components/icons/Discord.astro";
import GitHubIcon from "@/components/icons/GitHub.astro";
import GmailIcon from "@/components/icons/Gmail.astro";
import InstagramIcon from "@/components/icons/Instagram.astro";
import LinkedInIcon from "@/components/icons/LinkedIn.astro";
import YoutubeIcon from "@/components/icons/Youtube.astro";
import SocialElement from "@/components/SocialElement.astro";
---

<div class="relative overflow-hidden mt-16 bg-white">
    <div class="mx-auto max-w-7xl">
        <div
            class="relative z-10 bg-white pb-8 sm:pb-16 md:pb-20 lg:w-full lg:max-w-2xl lg:pb-28 xl:pb-32"
        >
            <svg
                class="absolute inset-y-0 right-0 hidden h-full w-48 translate-x-1/2 transform text-white lg:block"
                fill="currentColor"
                viewBox="0 0 100 100"
                preserveAspectRatio="none"
                aria-hidden="true"
            >
                <polygon points="50,0 100,0 50,100 0,100"></polygon>
            </svg>
            <main
                class="mx-auto max-w-7xl px-4 pt-10 sm:px-6 sm:pt-12 md:pt-16 lg:px-8 lg:pt-20 xl:pt-28 animate-fade-right animate-once animate-ease-linear"
            >
                <div class="text-center sm:text-left">
                    <a
                        href="https://www.linkedin.com/in/sebastian-gutierrez-guayacundo-43b165288/"
                        target="_blank"
                        rel="noopener"
                        class="flex justify-center items-center sm:justify-start mb-4"
                    >
                        <Badge>Disponible para trabajar</Badge>
                    </a>
                    <img
                        class="rounded-full size-72 mx-auto sm:hidden md:visible"
                        src="./photos/HeroIm.jpeg"
                        alt={personalImageAlt}
                    />
                    <h1
                        class="text-center lg:text-left text-4xl font-extrabold tracking-tight text-gray-900 sm:text-5xl md:text-6xl"
                    >
                        <span class="shine-text block xl:inline"
                            >Hola, Soy Sebastian</span
                        >
                    </h1>
                    <p
                        class="mt-3 text-base text-gray-600 sm:mx-auto sm:mt-5 sm:max-w-xl sm:text-lg md:mt-5 md:text-xl lg:mx-0"
                    >
                        Mi enfoque integral abarca una diversa gama de
                        habilidades
                        <span class="text-red-700 dark:text-yellow-300">
                            Desarrollador, Analista de Datos, Contador, Auditor
                            y Creador de Contenido
                        </span>.
                        <span class="text-sky-800 dark:text-sky-200">
                            De Bogotá, Colombia</span
                        >.
                        <span class="opacity-80 dark:opacity-70">
                            Especializado en diseñar y ejecutar soluciones
                            únicas para impulsar el éxito en cada proyecto.
                        </span>
                    </p>

                    <nav class="flex gap-3 mt-4 lg:mt-6 flex-wrap">
                        <SocialElement
                            href="https://www.instagram.com/soyy_sebas/"
                        >
                            <InstagramIcon class="size-5 md:size-6" />
                            Instagram
                        </SocialElement>
                        <SocialElement href="https://linktr.ee/soyysebas">
                            <YoutubeIcon class="size-5 md:size-6" />
                            Youtube
                        </SocialElement>
                        <SocialElement
                            href="https://www.linkedin.com/in/sebastian-gutierrez-guayacundo-43b165288"
                        >
                            <LinkedInIcon class="size-5 md:size-6" />
                            LinkedIn
                        </SocialElement>
                        <SocialElement href="https://github.com/Soy-Sebas">
                            <GitHubIcon class="size-5 md:size-6" />
                            GitHub
                        </SocialElement>
                        <SocialElement
                            href="https://discordapp.com/users/1140012750874099772"
                        >
                            <DiscordIcon class="size-5 md:size-6" />
                            Discord
                        </SocialElement>
                        <div id="copiedNotification" class="notification"></div>
                        <SocialElement id="miSocialElementCorreo" role="button">
                            <GmailIcon class="size-5 md:size-6" />
                            sebastian.gutierrez.guayacundo@gmail.com
                        </SocialElement>
                    </nav>
                </div>
            </main>
        </div>
    </div>
    <div
        class="bg-red-100 dark:bg-red-500 lg:absolute lg:inset-y-0 lg:right-0 lg:w-1/2 h-auto hidden md:block"
    >
        <img
            class="h-56 w-full object-cover sm:h-72 md:h-96 lg:h-full lg:w-full"
            src="./photos/HeroIm.jpeg"
            alt={personalImageAlt}
        />
    </div>
</div>
